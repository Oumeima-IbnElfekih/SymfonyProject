     <a href="{{ path('app_hall_materiel_show', {'hall_id': hall.id, 'materiel_id' : materiel.id}) }}">{{ materiel }}</a>
   </li>
   {% endfor %}
</ul></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_hall_index') }}">back to list</a>

