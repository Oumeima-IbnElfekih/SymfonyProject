{% extends 'base.html.twig' %}

{% block title %}Hall{% endblock %}

{% block main %}
    <h1>Hall</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hall.id }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ hall.description }}</td>
            </tr>
            <tr>
